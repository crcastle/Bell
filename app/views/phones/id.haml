- @title = @name + (@phone.verified? ? "" : (@phone.is_sip?) ? "" : "(unverified)")
- @verified = @phone.verified? ? "" : (@phone.is_sip? ? "" : link_to_verify("(unverified)", @phone))

%h1
	Edit phone: #{@name}
	!= @verified
	
- errors_on @phone do |error|
	- error.on [:name, :not_present], "Please provide a name."
	- error.on [:exten, :not_present], "Please provide an extension or phone number."
	- error.on [:type, :not_present], "Please select a phone type."	

%form(action="/phones/#{@phone.id}" method="post")
	%p
		%label(for="phone_name") Name
		%span.example e.g. "Chris's mobile phone"
		%br
		%input(name="phone[name]" id="phone_name" value="#{@phone.name}")
	
	%p
		%label(for="phone_exten") Extension or Phone Number
		%span.example e.g. 16178235295 or 85
		%br
		%input(name="phone[exten]" id="phone_exten" value="#{@phone.exten}")
	
	%p
		%label(for="phone_type") Type
		%span.example e.g. Mobile, landline, or SIP? (question mark link to explain these types)
		%br
		%input{:type => "radio", :name => "phone[type]", :id => "phone_type_mobile", :value => "mobile", :checked => @phone.is_mobile? ? true : nil} Mobile
		%br
		%input{:type => "radio", :name => "phone[type]", :id => "phone_type_land", :value => "land", :checked => @phone.is_land? ? true : nil} Landline
		%br
		%input{:type => "radio", :name => "phone[type]", :id => "phone_type_sip", :value => "sip", :checked => @phone.is_sip? ? true : nil} SIP
	
	%p
		%button(type="submit")
			Submit
		%button(type="button" onclick="javascript:document.location = '/phones'")
			Cancel
%form(action="/phones/#{@phone.id}" method="post")
	%p
		%input(type="hidden" name="_method" value="delete")
		%button(type="submit" onclick="return confirm('Are you sure you want to delete this phone?')")
			Delete Phone

					