- @title = format_number(@did)

%h1 Number details

%p
	Number:
	!= format_number(@did)
%p
	State:
	!= @state
	
%form(action="/numbers/#{@id}" method="post")
	%input(type="hidden" name="_method" value="put")
	%p
		%button(type="submit" onclick="return confirm('Are you sure you want to remove this number from your account?')")
			Remove from my account
		%button(type="button" onclick="javascript:document.location = '/numbers'")
			Cancel

					